{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hyprwall-ui",
  "version": "0.1.0",
  "identifier": "com.hyprwall.ui",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    },
    "windows": [
      {
        "title": "Hyprwall UI",
        "width": 980,
        "height": 720,
        "resizable": true
      }
    ]
  }
}
