{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "kitowall-ui",
  "version": "1.0.7",
  "identifier": "com.kitowall.ui",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$HOME/**",
          "$HOME/Videos/LiveWallpapers/**",
          "$HOME/Videos/LiveWallpapers/.kitowall/tmp/previews/**",
          "/home/kitotsu/**",
          "/home/kitotsu/Videos/LiveWallpapers/**",
          "/home/kitotsu/Videos/LiveWallpapers/.kitowall/tmp/previews/**"
        ]
      }
    },
    "windows": [
      {
        "title": "Kitowall UI",
        "width": 980,
        "height": 720,
        "resizable": true
      }
    ]
  }
}
